	}
	/**
	 * @return the lastHeartbetDT
	 */
	@Transient
	public long getLastHeartbetDT() {
		return lastHeartbetTime;
	}
	/**
	 * @param lastHeartbetDT the lastHeartbetDT to set
	 */
	public void setLastHeartbetDT(long lastHeartbetDT) {
		this.lastHeartbetTime = lastHeartbetDT;
	}
	
	public boolean isOnline() {
		return System.currentTimeMillis() - getLastHeartbetDT() <= 5 * 60 * 1000;
	}
	
	public static byte[] convertControllerId2Bytes(String controllerId) {
		byte[] bytes = new byte[6];
		if (controllerId.equals("")){
			return bytes;
		}
		if (controllerId.length() != 12){
			throw new IllegalArgumentException("The controller Id must be 12 characters with format YYYYMMDDnnnn.");
		}
		short year = Short.valueOf(controllerId.substring(0, 4));
		byte month = Byte.valueOf(controllerId.substring(4, 6));
		byte day = Byte.valueOf(controllerId.substring(6, 8));
		short No = Short.valueOf(controllerId.substring(8, 12));
		
		byte[] bytesYear = FormatTransfer.toLH(year);	
		byte[] bytesNo = FormatTransfer.toLH(No);
		
		bytes[0] = bytesYear[0];
		bytes[1] = bytesYear[1];
		bytes[2] = month;
		bytes[3] = day;
		bytes[4] = bytesNo[0];
		bytes[5] = bytesNo[1];
		
		return bytes;		
	}


	
}
